<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_black_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line_top"
        android:text="@string/top_text"
        android:textColor="#ff0000"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:cursorVisible="true"
        android:textSize="40sp"
        android:layout_below="@+id/share_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="@+id/image_black_back"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line_bottom"
        android:text="@string/bottom_text"
        android:singleLine="true"
        android:textColor="#ff0000"
        android:cursorVisible="true"
        android:gravity="center_horizontal"
        android:textSize="40sp"
        android:layout_alignBottom="@+id/image_black_back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="@+id/image_black_back"/>

    <Button
        android:id="@+id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_via"
        android:layout_alignRight="@+id/image_black_back"/>

</RelativeLayout>